        <Button
            style="@style/SmartRefreshFragment_TabButton"
            android:id="@+id/btnThird"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="动态" />
        <Button
            style="@style/SmartRefreshFragment_TabButton"
            android:id="@+id/btnFourth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
